%html
  %head
    %meta{ :charset => "utf-8" }
    %link{ :rel => "stylesheet", :href => 'login-box.css' }
    %title HAML Example
  %body
    #login-box
      %h2 Login  
    %form{:action => "/", :method => "post"}
        %label{:for => "username"} Username:
        %input.form-login{:type => "textbox", :name => "username", :id => "username"}
        %label{:for => "password"} Password:
        %input.form-login{:type => "textbox", :name => "password", :id => "password"}
        %input{:type => "submit", :value => "Register"}
   	
   	

